{
	"name": "cb-web",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"lint-staged": {
		"*.{js,svelte}": "eslint --cache --fix",
		"*.{cjs,js,svelte,json,scss,css,md}": "prettier --ignore-unknown --write --plugin prettier-plugin-svelte"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"generate-database-types": "supabase gen types --local > src/lib/types/database.types.ts",
		"run-sms-function": "supabase functions serve send-sms --no-verify-jwt --env-file .env",
		"deploy-sms-function": "supabase functions deploy send-sms --no-verify-jwt"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.10",
		"@tailwindcss/vite": "^4.0.0",
		"@types/pg": "^8.15.5",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"pg": "^8.16.3",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"supabase": "^2.22.6",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.5"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"dependencies": {
		"@fontsource/nunito": "^5.2.5",
		"@paystack/inline-js": "^2.22.7",
		"@supabase/ssr": "^0.7.0",
		"@supabase/supabase-js": "^2.49.4",
		"iconify-icon": "^2.3.0",
		"svelte-sonner": "^0.3.28",
		"zod": "^3.24.3"
	}
}
